<?xml version="1.0" encoding="UTF-8" ?>
<solr persistent="false">
  <!-- The defaultCoreName is the first directory found alphabetically -->
  <cores adminPath="/admin/cores" shareSchema="true" defaultCoreName="<%= @core_names[0] %>">
    <!-- Autogenerated via puppet, to add a new core simply add your config to
    the solr-config directory on the host system, and run vagrant provision to
    update this file. -->
    <%- @core_names.each do |val| -%>
    <core name="<%= val %>" instanceDir="<%= val %>" />
    <%- end -%>
  </cores>
</solr>
